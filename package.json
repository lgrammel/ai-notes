{
  "name": "ai-notes",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "check-indexes": "node apps/lint/scripts/check-indexes.js",
    "check-links": "node apps/lint/scripts/check-links.js *.md concepts/*.md ideas/*.md threats/*.md",
    "check-quotes": "node apps/lint/scripts/check-quotes.js",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"#**/node_modules\"",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "markdownlint-cli2": "^0.17.2",
    "prettier": "^3.5.1"
  },
  "lint-staged": {
    "*.md": [
      "prettier --write",
      "markdownlint-cli2",
      "node apps/lint/scripts/check-indexes.js",
      "node apps/lint/scripts/check-links.js",
      "node apps/lint/scripts/check-quotes.js"
    ],
    "*.{js,ts,json,jsonc}": [
      "prettier --write"
    ]
  }
}
